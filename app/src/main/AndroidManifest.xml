<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.threebeebox.firebasechatapps">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.threebeebox.firebasechatapps.ImageViewActivity"/>
        <activity
            android:name="com.threebeebox.firebasechatapps.FindFdActivity"
            android:parentActivityName="com.threebeebox.firebasechatapps.MainActivity" />
        <activity android:name="com.threebeebox.firebasechatapps.PhoneLoginActivity" />
        <activity
            android:name="com.threebeebox.firebasechatapps.CalendarActivity"
            android:parentActivityName="com.threebeebox.firebasechatapps.GroupChatActivity" />
        <activity
            android:name="com.threebeebox.firebasechatapps.ProfileActivity"
            android:parentActivityName="com.threebeebox.firebasechatapps.MainActivity" />
        <activity
            android:name="com.threebeebox.firebasechatapps.SettingsActivity"
            android:parentActivityName="com.threebeebox.firebasechatapps.MainActivity" />
        <activity
            android:name="com.threebeebox.firebasechatapps.GroupCreateActivity"
            android:parentActivityName="com.threebeebox.firebasechatapps.MainActivity" />
        <activity
            android:name="com.threebeebox.firebasechatapps.GroupFinishCreateActivity"
            android:parentActivityName="com.threebeebox.firebasechatapps.MainActivity" />
        <activity
            android:name="com.threebeebox.firebasechatapps.GroupChatActivity"
            android:launchMode="singleTop"
            android:parentActivityName="com.threebeebox.firebasechatapps.MainActivity"/>
        <activity
            android:name="com.threebeebox.firebasechatapps.GroupInfoActivity"
            android:parentActivityName="com.threebeebox.firebasechatapps.GroupChatActivity" />
        <activity
            android:name="com.threebeebox.firebasechatapps.AddMemberActivity"
            android:parentActivityName="com.threebeebox.firebasechatapps.GroupChatActivity" />

        <receiver android:name="com.threebeebox.firebasechatapps.AlarmReceiver" />
        <activity
            android:name="com.threebeebox.firebasechatapps.FindFriendsActivity"
            android:parentActivityName="com.threebeebox.firebasechatapps.MainActivity" />
        <activity
            android:name="com.threebeebox.firebasechatapps.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.threebeebox.firebasechatapps.ChatActivity"
            android:parentActivityName="com.threebeebox.firebasechatapps.MainActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>