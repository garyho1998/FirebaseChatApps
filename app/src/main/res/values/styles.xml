<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--        <item name="windowActionBar">false</item>-->
        <item name="windowNoTitle">true</item>

    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/holo_red_light</item>
        <item name="android:textColorSecondary">@android:color/holo_red_dark</item>
        <item name="actionMenuTextColor">@android:color/holo_purple</item>
    </style>
    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog"></style>

    <style name="date_picker_theme" parent="@android:style/Widget.DatePicker"/>
</resources>
