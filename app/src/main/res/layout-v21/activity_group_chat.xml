<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupChatActivity"
    android:background="@color/lightGrey">

    <include
        android:id="@+id/group_chat_bar_layout"
        layout="@layout/app_bar_layout_white" />
    <View android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/toolbar_drop_shadow"
        android:layout_below="@id/group_chat_bar_layout"
        android:id="@+id/toolbar_drop_shadow"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messages_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/cardView_groupChat"
        android:layout_below="@+id/group_chat_bar_layout"
        android:paddingTop="10dp"
        android:layout_marginBottom="0dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_groupChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:elevation="3dp"
        app:cardCornerRadius="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <ImageButton
                android:id="@+id/send_files_btn"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_weight="13"
                android:layout_height="50dp"
                android:src="@drawable/add_image"
                android:scaleType="fitXY"
                />
            <EditText
                android:id="@+id/input_group_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="61"
                android:hint="Type here..." />

            <ImageButton
                android:id="@+id/send_message_button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_weight="13"
                android:layout_height="50dp"
                android:src="@drawable/send_message"
                android:scaleType="fitXY"
                />

            <ImageButton
                android:id="@+id/send_delay_button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_weight="13"
                android:layout_height="50dp"
                android:src="@drawable/delay_msg_icon"
                android:scaleType="fitXY"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/calendarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="65dp"
        android:clickable="true"
        android:src="@drawable/ic_calendar"
        app:backgroundTint="@color/white" />
</RelativeLayout>